<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/toolbar_layout"
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="48dp"
             android:background="#38acff"
             android:fitsSystemWindows="false"
             android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:src="@drawable/icon_back"
        />


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:text="首页"
        />

    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:visibility="gone"
        tools:text="新建"
        />

    <RelativeLayout
        android:id="@+id/title_mes_layout"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical"
        android:visibility="gone"
        >


        <ImageView
            android:id="@+id/title_message"
            android:layout_width="@dimen/x50"
            android:layout_height="19dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20px"
            android:layout_marginRight="7dp"
            android:src="@drawable/icon_title_bar_message_white"
            />

        <TextView
            android:id="@+id/title_un_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/title_message"
            android:layout_alignEnd="@+id/title_message"
            android:layout_alignRight="@+id/title_message"
            android:layout_marginBottom="@dimen/x40"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/shape_title_bar_msg_num"
            android:maxLines="1"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15"
            android:text="99"
            android:textColor="@color/white"
            android:textSize="@dimen/x30"/>
    </RelativeLayout>
</FrameLayout>